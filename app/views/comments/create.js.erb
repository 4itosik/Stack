<% if @comment.errors.any?%>
$("#<%= @commentable.class.to_s.downcase%>_<%= @commentable.id%> .comment-form").html("<%= j render partial: 'comments/form'%>");
<% else %>
  $("#<%= @commentable.class.to_s.downcase%>_<%= @commentable.id%> .comment-form").html("");
  <% publish_to "/questions/#{question_id(@comment)}/answers" do %>
  $("#<%= @commentable.class.to_s.downcase%>_<%= @commentable.id%> .comments").append("<%= j render partial: 'comments/comment'%>");
  <% end %>
<% end %>